---
import FrameworkCard from '../components/FrameworkCard.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const frameworks = await getCollection('frameworks');
export const prerender = true
---

<Layout title="Frameworks populares">
    <h1 class="text-center text-5xl sm:text-6xl md:text-7xl font-extrabold mb-12"><span class="block">Frameworks</span> populares</h1>
	<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">

        {
            frameworks.map(framework => {
                const { slug, data } = framework;
                //const { name, img_framework, description, language, img_language, last_version, docs } = data;
                return (
                    <FrameworkCard slug={slug} data={data}/>
                );
            })
        }
    </div>
</Layout>
